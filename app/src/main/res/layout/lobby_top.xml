<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/top_bar"
        >


        <ImageView
            android:id="@+id/bBack"
            android:layout_width="35dp"
            android:layout_height="35dp"

            android:layout_weight="1"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"

            android:layout_marginLeft="10dp"
            android:alpha=".7"/>


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/logo"
            android:padding="6dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/bSetting"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/settings"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:alpha=".7"/>

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="200dp"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center_vertical"

            android:layout_centerVertical="true"
            android:orientation="vertical"

            >


            <ImageView
                android:id="@+id/imageView"
                android:layout_height="250dp"
                android:layout_width="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/drop_shadow"
                android:src="@drawable/ac" />


            <Button
                android:id="@+id/play_button"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/pause_button"
                android:letterSpacing=".2"
                android:padding="2dp"
                android:text="PAUSE"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/song_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Nice for What - Drake"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="24sp" />

            <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_horizontal">


                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    app:layout_widthPercent="80%" />

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:layout_widthPercent="80%">


                    <TextView
                        android:id="@+id/time_passed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="20dp"
                        android:alpha=".7"
                        android:text="1:29"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/time_remaining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20dp"
                        android:alpha=".7"
                        android:text="-2:12"
                        android:textColor="#ffffff" />
                </RelativeLayout>


            </android.support.percent.PercentRelativeLayout>

        </LinearLayout>
    </RelativeLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_marginTop="-200dp"
        >


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/lobby_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:text="CERTIFIED PEARLS"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:textStyle="bold"
            android:letterSpacing=".1"/>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <ImageView

                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@drawable/person"
                android:alpha=".7"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/num_members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:text="4"
                android:textColor="#ffffff"
                android:textSize="18sp"
                />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UP NEXT:"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="13dp"
                    />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/up_next">

                    <ImageView
                        android:id="@+id/album_art_next"
                        android:layout_width="@dimen/album_art_dimen"
                        android:layout_height="@dimen/album_art_dimen"
                        />

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp">

                        <TextView
                            android:id="@+id/song_title_next"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:paddingLeft="@dimen/result_padding"
                            android:paddingRight="20dip"
                            android:text="Song Title"
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            android:textColor="#ffffff"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:visibility="visible"
                            app:layout_constraintLeft_toRightOf="@+id/album_art" />


                        <TextView
                            android:id="@+id/artist_name_next"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:paddingLeft="@dimen/result_padding"
                            android:paddingRight="20dip"
                            android:text="Artist"
                            android:textColor="#ffffff"
                            android:textSize="12sp"
                            android:visibility="visible"
                            app:layout_constraintLeft_toRightOf="@+id/album_art"
                            app:layout_constraintTop_toBottomOf="@+id/song_title" />


                    </LinearLayout>

                    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"

                        >



                        <ImageView
                            android:id="@+id/source"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:src="@drawable/add_song"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:alpha=".7"/>

                    </RelativeLayout>


                </LinearLayout>



            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="-50dp"
                >
                <Button
                    android:id="@+id/bViewQueue"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:background="@drawable/lobby_buttons"
                    android:layout_gravity="center_horizontal"
                    android:letterSpacing=".2"
                    android:text="VIEW QUEUE"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:layout_marginHorizontal="10dp"
                    />

                <Button
                    android:id="@+id/bAddSong"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:background="@drawable/lobby_buttons"
                    android:layout_gravity="center_horizontal"
                    android:letterSpacing=".2"
                    android:text="ADD SONG"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:layout_marginHorizontal="10dp"
                    />
            </LinearLayout>

        </LinearLayout>






    </LinearLayout>
    </LinearLayout>

</LinearLayout>